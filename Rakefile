require 'rubygems'
require 'rake'

begin
  require 'jeweler'
  Jeweler::Tasks.new do |gem|
    gem.name = "clojure"

    gem.summary = %Q{A JavaGem version of clojure - packaged by JavaGems (http://www.javagems.org)}



    gem.description = "Clojure core environment and runtime library."    

    gem.homepage = "http://www.javagems.org/"

    gem.authors = ["pending/unknown"]

    gem.email = "autobuild@javagems.org"
    gem.version = "1.0.0"

  

  end
rescue LoadError
  puts "Jeweler (or a dependency) not available. Install it with: sudo gem install jeweler"
end

task :default => :build
